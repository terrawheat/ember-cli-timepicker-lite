<input type="text" name="{{name}}" id="{{id}}" />
<div class="timepicker-display">
  {{#if showHours}}
  <div class="timepicker-field timepicker-hour">
    <div class="arrow-up">&#9650;</div>
    <div class="timepicker-h">12</div>
    <div class="arrow-down">&#9660;</div>
  </div>
  {{/if}}
  {{#if showMinutes}}
  <div class="timepicker-field timepicker-minute">
    <div class="arrow-up">&#9650;</div>
    <div class="timepicker-m">00</div>
    <div class="arrow-down">&#9660;</div>
  </div>
  {{/if}}
  {{#if showSeconds}}
  <div class="timepicker-field timepicker-second">
    <div class="arrow-up">&#9650;</div>
    <div class="timepicker-s">00</div>
    <div class="arrow-down">&#9660;</div>
  </div>
  {{/if}}
  {{#if showMeridian}}
  <div class="timepicker-field timepicker-meridian">
    <div class="timepicker-md">AM</div>
  </div>
  {{/if}}
  {{#if showTimeZone}}
  <div class="timepicker-field timepicker-timezone">
    <div class="timepicker-tz">GMT</div>
  </div>
  {{/if}}
</div>
